@model Giropescando.Models.REGISTRAZIONE

<!-- Modale Bootstrap per la registrazione -->
<div class="modal fade" id="RegistraUtenteModal" tabindex="-1" aria-labelledby="RegistraUtenteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="RegistraUtenteModalLabel">Registrazione Utente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="@Url.Action("RegistraUtente", "Registrazione")">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Username)
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.ConfirmPassword)
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Nome)
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Cognome)
                        @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Cod_Fiscale)
                        @Html.EditorFor(model => model.Cod_Fiscale, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Citta)
                        @Html.EditorFor(model => model.Citta, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Prov)
                        @Html.EditorFor(model => model.Prov, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Indirizzo)
                        @Html.EditorFor(model => model.Indirizzo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Tel_Cell)
                        @Html.EditorFor(model => model.Tel_Cell, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <!-- Aggiungi qui altri campi del form -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                    <input type="submit" class="btn btn-primary" value="Registra" />
                </div>
            </form>
        </div>
    </div>
</div>

<script>$(document).ready(function() {
    $('#formRegistrazione').submit(function(e) {
        e.preventDefault(); // Previene il comportamento di invio standard del form
        var formData = $(this).serialize(); // Serializza i dati del form

        $.ajax({
            type: 'POST',
            url: '/Registrazione/RegistraUtente', // Aggiorna con il percorso corretto se necessario
            data: formData,
            success: function(response) {
                // Gestisci la risposta di successo
                alert('Registrazione completata con successo!');
                // Qui puoi anche chiudere il modale se vuoi
            },
            error: function(error) {
                // Gestisci errori
                alert('Errore durante la registrazione.');
            }
        });
    });
});</script>


